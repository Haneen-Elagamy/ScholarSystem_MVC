@model Student
@{
    ViewData["Title"] = "ShowDetails";
}

<div class="container mt-4">
    <h1 class="text-primary">Student Details</h1>
    <div class="card shadow-lg p-4">
        <h3><strong>Name:</strong> @Model.Name</h3>
        <h3><strong>Age:</strong> @Model.Age</h3>
        <h3><strong>Department:</strong> @(Model.Department?.Name ?? "Not Assigned")</h3>
    </div>
</div>
