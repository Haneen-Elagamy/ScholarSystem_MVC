@model List<Course>
@{
    ViewData["Title"] = "ShowAll";
    Layout = "_MyLayout";
}

<h1>Courses List</h1>
<a asp-action="Add" class="btn btn-primary  mt-3 mb-3" >Add New Course</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Degree</th>
            <th>Min Degree</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Name</td>
                <td>@course.Degree</td>
                <td>@course.MinDegree</td>
                <td>@course.Department?.Name</td>
                <td>
                    <a asp-controller="Course" asp-action="ShowDetails" asp-route-id="@course.Id" class="btn btn-info">Details</a>
                    <a asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="Course" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
