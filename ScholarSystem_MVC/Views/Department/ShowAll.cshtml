@model List<Department>
@{
    ViewData["Title"] = "ShowAll";
    Layout = "_MyLayout";
}

<h1>ShowAll</h1>
<a href="/Department/Add" class="btn btn-success mt-3 mb-3">New</a>
<table class=" table table-striped table-bordered text-center table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Manager Name</th>
            <th>Students Count</th>
            <th>Teachers Count</th>
            <th>Courses Count</th>
            <th></th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.MgrName</td>
                <td>@(item.Students?.Count ?? 0)</td>
                <td>@(item.Teachers?.Count ?? 0)</td>
                <td>@(item.Courses?.Count ?? 0)</td>
                <td><a asp-action="Edit" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-primary">Edit</a></td>
                <td><a @* asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id" *@ class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>

</table>

