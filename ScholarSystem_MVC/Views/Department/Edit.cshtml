@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>

<form asp-action="SaveEdit" asp-controller="Department" @* asp-route-id="@Model.Id" *@ method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MgrName"></label>
        <input asp-for="MgrName" class="form-control" />
        <span asp-validation-for="MgrName" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>

</form>
<br />
